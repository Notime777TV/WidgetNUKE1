    <script>
        // Fonction pour afficher le message
        function showNuclearBanner(viewerName, message) {
            var bannerHtml = '<div class="nuclear-banner">' +
                             '<strong>üí• Message de ' + viewerName + ':</strong> ' + message +
                             '</div>';
            document.getElementById("overlay").innerHTML = bannerHtml;

            // Apr√®s 5 secondes, retirer la banni√®re
            setTimeout(function() {
                document.getElementById("overlay").innerHTML = ''; // Effacer la banni√®re
            }, 5000);
        }

        // Ex√©cute la banni√®re avec des exemples
        // Tu peux remplacer ces valeurs par des donn√©es en temps r√©el venant d'un bot ou d'une int√©gration
